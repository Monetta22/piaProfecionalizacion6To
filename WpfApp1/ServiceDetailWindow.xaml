<Window x:Class="ServiceDetailWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Detalle Servicio" Height="600" Width="780" Background="#121212">
 <Grid Margin="12">
 <Grid.RowDefinitions>
 <RowDefinition Height="Auto" />
 <RowDefinition Height="*" />
 <RowDefinition Height="Auto" />
 </Grid.RowDefinitions>
 <StackPanel>
 <TextBlock x:Name="TitleText" FontSize="24" FontWeight="Bold" Foreground="White" />
 <TextBlock x:Name="PriceText" FontSize="16" Foreground="#4CAF50" Margin="0,4,0,12" />
 <TextBlock x:Name="SummaryText" TextWrapping="Wrap" Foreground="#DDDDDD" Margin="0,0,0,16" />
 <TextBlock Text="Datos" FontSize="18" FontWeight="SemiBold" Foreground="White" />
 <ListBox x:Name="FeaturesList" Margin="0,4,0,12" Background="Transparent" BorderThickness="0" Foreground="#B0BEC5" />
 </StackPanel>
 <Grid Grid.Row="1" Margin="0,10,0,10">
 <Grid.ColumnDefinitions>
 <ColumnDefinition Width="*" />
 <ColumnDefinition Width="*" />
 </Grid.ColumnDefinitions>
 <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
 <StackPanel Margin="0,0,16,0">
 <TextBlock Text="Entregables" FontSize="18" FontWeight="SemiBold" Foreground="White" />
 <TextBlock x:Name="DeliverablesText" TextWrapping="Wrap" Foreground="#B0BEC5" Margin="0,6,0,16" />
 <TextBlock Text="Beneficios" FontSize="18" FontWeight="SemiBold" Foreground="White" />
 <TextBlock x:Name="BenefitsText" TextWrapping="Wrap" Foreground="#B0BEC5" Margin="0,6,0,16" />
 </StackPanel>
 </ScrollViewer>
 <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
 <StackPanel>
 <TextBlock Text="Duracion" FontSize="18" FontWeight="SemiBold" Foreground="White" />
 <TextBlock x:Name="DurationText" Foreground="#B0BEC5" Margin="0,6,0,12" />
 <TextBlock Text="SLA" FontSize="18" FontWeight="SemiBold" Foreground="White" />
 <TextBlock x:Name="SlaText" Foreground="#B0BEC5" Margin="0,6,0,12" />
 <TextBlock Text="Equipo" FontSize="18" FontWeight="SemiBold" Foreground="White" />
 <TextBlock x:Name="EquipoText" TextWrapping="Wrap" Foreground="#B0BEC5" Margin="0,6,0,12" />
 <TextBlock Text="Casos" FontSize="18" FontWeight="SemiBold" Foreground="White" />
 <TextBlock x:Name="CasosText" TextWrapping="Wrap" Foreground="#B0BEC5" Margin="0,6,0,12" />
 </StackPanel>
 </ScrollViewer>
 <!-- Formulario -->
 <Border x:Name="FormBorder" Grid.ColumnSpan="2" Background="#1E1E1E" CornerRadius="12" Padding="18" BorderBrush="#333" BorderThickness="1" Visibility="Collapsed" Margin="0,16,0,0">
 <StackPanel>
 <TextBlock Text="Solicitud del Servicio" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,12" />
 <Grid Margin="0,0,0,10">
 <Grid.ColumnDefinitions>
 <ColumnDefinition Width="*" />
 <ColumnDefinition Width="*" />
 </Grid.ColumnDefinitions>
 <Grid.RowDefinitions>
 <RowDefinition Height="Auto" />
 <RowDefinition Height="Auto" />
 <RowDefinition Height="Auto" />
 <RowDefinition Height="Auto" />
 </Grid.RowDefinitions>
 <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,8,8">
 <TextBlock Text="Empresa" Foreground="#CCCCCC" FontSize="12" />
 <TextBox x:Name="EmpresaText" Background="#252525" Foreground="White" BorderBrush="#444" />
 </StackPanel>
 <StackPanel Grid.Column="1" Grid.Row="0" Margin="8,0,0,8">
 <TextBlock Text="Correo" Foreground="#CCCCCC" FontSize="12" />
 <TextBox x:Name="CorreoText" Background="#252525" Foreground="White" BorderBrush="#444" />
 </StackPanel>
 <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,8,8">
 <TextBlock Text="Telefono" Foreground="#CCCCCC" FontSize="12" />
 <TextBox x:Name="TelefonoText" Background="#252525" Foreground="White" BorderBrush="#444" />
 </StackPanel>
 <StackPanel Grid.Column="1" Grid.Row="1" Margin="8,0,0,8">
 <TextBlock Text="Representante" Foreground="#CCCCCC" FontSize="12" />
 <TextBox x:Name="RepresentanteText" Background="#252525" Foreground="White" BorderBrush="#444" />
 </StackPanel>
 <StackPanel Grid.ColumnSpan="2" Grid.Row="2" Margin="0,0,0,8">
 <TextBlock Text="Mensaje / Necesidad" Foreground="#CCCCCC" FontSize="12" />
 <TextBox x:Name="MensajeText" Background="#252525" Foreground="White" BorderBrush="#444" Height="70" TextWrapping="Wrap" AcceptsReturn="True" />
 </StackPanel>
 <StackPanel Grid.ColumnSpan="2" Grid.Row="3" Margin="0,6,0,0">
 <TextBlock Text="Costo estimado" Foreground="#CCCCCC" FontSize="12" />
 <TextBlock x:Name="CostoPreview" Foreground="#4CAF50" FontWeight="Bold" FontSize="14" />
 </StackPanel>
 </Grid>
 <TextBlock x:Name="StatusText" Foreground="#FFB74D" Margin="0,4,0,6" />
 <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
 <Button x:Name="BtnCancelarForm" Content="Cancelar" Background="#424242" Foreground="White" Padding="10,4" BorderThickness="0" Width="110" Margin="0,0,8,0" />
 <Button x:Name="BtnEnviar" Content="Enviar Solicitud" Background="#2962FF" Foreground="White" Padding="10,4" BorderThickness="0" Width="150" />
 </StackPanel>
 </StackPanel>
 </Border>
 </Grid>
 <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
 <Button Content="Cerrar" Width="110" Padding="10,4" Background="#424242" Foreground="White" BorderThickness="0" IsCancel="True" />
 <Button x:Name="BtnSolicitar" Content="Contratar" Width="160" Margin="12,0,0,0" Padding="10,4" Background="#2962FF" Foreground="White" BorderThickness="0" />
 </StackPanel>
 </Grid>
</Window>