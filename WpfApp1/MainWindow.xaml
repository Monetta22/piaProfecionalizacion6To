<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="142*"/>
        </Grid.ColumnDefinitions>
        <!-- Filas agregadas -->
        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Cabecera -->
        <Border Grid.Row="0" Grid.ColumnSpan="3" Background="#2B2B2B" Padding="12,8" BorderBrush="#444" BorderThickness="0,0,0,1">
            <DockPanel>
                <TextBlock Text="Sistema Escolar" FontSize="18" FontWeight="Bold" Foreground="White"/>
                <Button Content="Salir" DockPanel.Dock="Right" Padding="10,4" Background="#4CAF50" Foreground="White" BorderThickness="0"/>
            </DockPanel>
        </Border>
        <!-- Menú lateral (sin Padding) -->
        <StackPanel Grid.Row="1" Grid.Column="0" Background="#252525" Margin="0">
            <TextBlock Text="Menú" FontSize="16" FontWeight="Bold" Foreground="White" Margin="10,10,10,8"/>
            <Button Content="Inicio" Margin="10,4,10,0"/>
            <Button Content="Alumnos" Margin="10,4,10,0"/>
            <Button Content="Cursos" Margin="10,4,10,0"/>
            <Button Content="Profesores" Margin="10,4,10,0"/>
            <Button Content="Reportes" Margin="10,4,10,0"/>
        </StackPanel>
        <!-- Contenido principal -->
        <Border Grid.Row="1" Grid.Column="1" Margin="10" Background="#202020" CornerRadius="6" Padding="14">
            <StackPanel>
                <TextBlock Text="Resumen" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                <TextBlock Text="Bienvenido. Aquí va el contenido principal." Foreground="#DDDDDD" Margin="0,8,0,16" TextWrapping="Wrap"/>
                <WrapPanel>
                    <Border Width="120" Height="70" Background="#2E7D32" CornerRadius="6" Margin="0,0,10,10" Padding="6">
                        <StackPanel>
                            <TextBlock Text="Alumnos" Foreground="White" FontWeight="Bold"/>
                            <TextBlock Text="25" Foreground="White" FontSize="16"/>
                        </StackPanel>
                    </Border>
                    <Border Width="120" Height="70" Background="#0277BD" CornerRadius="6" Margin="0,0,10,10" Padding="6">
                        <StackPanel>
                            <TextBlock Text="Cursos" Foreground="White" FontWeight="Bold"/>
                            <TextBlock Text="8" Foreground="White" FontSize="16"/>
                        </StackPanel>
                    </Border>
                </WrapPanel>
            </StackPanel>
        </Border>
        <!-- Panel derecho -->
        <Border Grid.Row="1" Grid.Column="2" Background="#252525" Padding="10">
            <StackPanel>
                <TextBlock Text="Notas" FontSize="16" FontWeight="Bold" Foreground="White"/>
                <TextBox Height="120" TextWrapping="Wrap" AcceptsReturn="True"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
