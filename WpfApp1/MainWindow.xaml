<Window x:Class="MainWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 mc:Ignorable="d"
 Title="Portal Servicios de Ciberseguridad" Height="520" Width="960" Background="#1C1C1C">
 <Window.Resources>
 <!-- Botón primario reutilizable -->
 <Style x:Key="PrimaryButton" TargetType="Button">
 <Setter Property="Background" Value="#2962FF"/>
 <Setter Property="Foreground" Value="White"/>
 <Setter Property="Padding" Value="12,6"/>
 <Setter Property="FontWeight" Value="SemiBold"/>
 <Setter Property="BorderThickness" Value="0"/>
 <Setter Property="Cursor" Value="Hand"/>
 <Setter Property="Margin" Value="0,8,0,0"/>
 <Setter Property="Template">
 <Setter.Value>
 <ControlTemplate TargetType="Button">
 <Border Background="{TemplateBinding Background}" CornerRadius="4">
 <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
 </Border>
 </ControlTemplate>
 </Setter.Value>
 </Setter>
 <Style.Triggers>
 <Trigger Property="IsMouseOver" Value="True">
 <Setter Property="Background" Value="#0039CB"/>
 </Trigger>
 <Trigger Property="IsPressed" Value="True">
 <Setter Property="Background" Value="#00227B"/>
 </Trigger>
 </Style.Triggers>
 </Style>
 <!-- Tarjeta de servicio -->
 <Style x:Key="ServiceCard" TargetType="Border">
 <Setter Property="Background" Value="#232323"/>
 <Setter Property="CornerRadius" Value="8"/>
 <Setter Property="Padding" Value="16"/>
 <Setter Property="Margin" Value="0,0,18,18"/>
 <Setter Property="Width" Value="260"/>
 <Setter Property="Effect">
 <Setter.Value>
 <DropShadowEffect Color="#000" BlurRadius="10" ShadowDepth="2" Opacity="0.35"/>
 </Setter.Value>
 </Setter>
 </Style>
 <!-- Título sección -->
 <Style x:Key="SectionTitle" TargetType="TextBlock">
 <Setter Property="FontSize" Value="22"/>
 <Setter Property="Foreground" Value="White"/>
 <Setter Property="FontWeight" Value="SemiBold"/>
 <Setter Property="Margin" Value="0,0,0,14"/>
 </Style>
 </Window.Resources>
 <Grid>
 <Grid.ColumnDefinitions>
 <ColumnDefinition Width="220"/>
 <ColumnDefinition Width="*"/>
 <ColumnDefinition Width="300"/>
 </Grid.ColumnDefinitions>
 <Grid.RowDefinitions>
 <RowDefinition Height="58"/>
 <RowDefinition Height="*"/>
 </Grid.RowDefinitions>
 <!-- Cabecera -->
 <Border Grid.Row="0" Grid.ColumnSpan="3" Background="#202020" Padding="16,10" BorderBrush="#333" BorderThickness="0,0,0,1">
 <DockPanel>
 <TextBlock Text="Portal de Servicios de Ciberseguridad" FontSize="20" FontWeight="Bold" Foreground="White"/>
 <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
 <Button Content="Contacto" Style="{StaticResource PrimaryButton}" Padding="14,6"/>
 <Button Content="Salir" Margin="10,0,0,0" Background="#E53935" Foreground="White" Padding="14,6" BorderThickness="0"/>
 </StackPanel>
 </DockPanel>
 </Border>
 <!-- Menú lateral -->
 <StackPanel Grid.Row="1" Grid.Column="0" Background="#181818">
 <TextBlock Text="Menú" FontSize="16" FontWeight="Bold" Foreground="White" Margin="14,16,14,8"/>
 <Button Content="Inicio" Style="{StaticResource PrimaryButton}" Margin="14,0,14,8"/>
 <Button Content="Servicios" Background="#424242" Foreground="White" Padding="12,6" Margin="14,0,14,8" BorderThickness="0"/>
 <Button Content="Clientes" Background="#424242" Foreground="White" Padding="12,6" Margin="14,0,14,8" BorderThickness="0"/>
 <Button Content="Nosotros" Background="#424242" Foreground="White" Padding="12,6" Margin="14,0,14,8" BorderThickness="0"/>
 <Button Content="Reportes" Background="#424242" Foreground="White" Padding="12,6" Margin="14,0,14,8" BorderThickness="0"/>
 </StackPanel>
 <!-- Zona central: Servicios -->
 <Border Grid.Row="1" Grid.Column="1" Margin="16" Background="#1F1F1F" CornerRadius="10" Padding="22">
 <ScrollViewer VerticalScrollBarVisibility="Auto">
 <StackPanel>
 <TextBlock Text="Servicios Destacados" Style="{StaticResource SectionTitle}"/>
 <WrapPanel>
 <!-- Servicio1 -->
 <Border Style="{StaticResource ServiceCard}">
 <StackPanel>
 <TextBlock Text="Consultoría y Auditoría" FontSize="16" FontWeight="Bold" Foreground="#FAFAFA"/>
 <TextBlock Text="Evaluación de vulnerabilidades, auditorías y plan de mejora personalizado." TextWrapping="Wrap" Foreground="#CCCCCC" Margin="0,6,0,8"/>
 <TextBlock Text="Desde $1,500" Foreground="#4CAF50" FontWeight="Bold"/>
 <Button Content="Contratar" Style="{StaticResource PrimaryButton}" Click="Button_Click"/>
 </StackPanel>
 </Border>
 <!-- Servicio2 -->
 <Border Style="{StaticResource ServiceCard}">
 <StackPanel>
 <TextBlock Text="Capacitaciones Técnicas" FontSize="16" FontWeight="Bold" Foreground="#FAFAFA"/>
 <TextBlock Text="Cursos prácticos: hardening, respuesta a incidentes, forense y malware." TextWrapping="Wrap" Foreground="#CCCCCC" Margin="0,6,0,8"/>
 <TextBlock Text="Desde $900" Foreground="#4CAF50" FontWeight="Bold"/>
 <Button Content="Contratar" Style="{StaticResource PrimaryButton}"/>
 </StackPanel>
 </Border>
 <!-- Servicio3 -->
 <Border Style="{StaticResource ServiceCard}">
 <StackPanel>
 <TextBlock Text="Herramientas / Suites" FontSize="16" FontWeight="Bold" Foreground="#FAFAFA"/>
 <TextBlock Text="Implementación de SIEM, EDR y escáneres de vulnerabilidades." TextWrapping="Wrap" Foreground="#CCCCCC" Margin="0,6,0,8"/>
 <TextBlock Text="Desde $2,300" Foreground="#4CAF50" FontWeight="Bold"/>
 <Button Content="Contratar" Style="{StaticResource PrimaryButton}"/>
 </StackPanel>
 </Border>
 </WrapPanel>
 </StackPanel>
 </ScrollViewer>
 </Border>
 <!-- Panel derecho: notas / indicadores -->
 <Border Grid.Row="1" Grid.Column="2" Background="#181818" Padding="18" BorderBrush="#333" BorderThickness="1" CornerRadius="10" Margin="16">
 <StackPanel>
 <TextBlock Text="Notas / Requerimientos" FontSize="16" FontWeight="Bold" Foreground="White"/>
 <TextBlock Text="Anota detalles del cliente antes de enviar una propuesta." Foreground="#BDBDBD" Margin="0,8,0,12" TextWrapping="Wrap"/>
 <TextBox Height="160" TextWrapping="Wrap" AcceptsReturn="True" Background="#252525" Foreground="White" BorderBrush="#444"/>
 <Separator Margin="0,18,0,12" Background="#333" Height="1"/>
 <TextBlock Text="Indicadores" FontSize="15" FontWeight="SemiBold" Foreground="White"/>
 <WrapPanel Margin="0,8,0,0">
 <Border Background="#2E7D32" CornerRadius="6" Padding="10" Margin="0,0,10,10" Width="120" Height="70">
 <StackPanel>
 <TextBlock Text="Clientes" Foreground="White" FontWeight="Bold"/>
 <TextBlock Text="42" Foreground="White" FontSize="16"/>
 </StackPanel>
 </Border>
 <Border Background="#0277BD" CornerRadius="6" Padding="10" Margin="0,0,10,10" Width="120" Height="70">
 <StackPanel>
 <TextBlock Text="Proyectos" Foreground="White" FontWeight="Bold"/>
 <TextBlock Text="15" Foreground="White" FontSize="16"/>
 </StackPanel>
 </Border>
 </WrapPanel>
 </StackPanel>
 </Border>
 </Grid>
</Window>