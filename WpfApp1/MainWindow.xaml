<Window x:Class="MainWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 mc:Ignorable="d"
 Title="Portal Servicios de Ciberseguridad" Height="520" Width="960" Background="#1C1C1C">
 <Window.Resources>
 <!-- Botón primario reutilizable -->
 <Style x:Key="PrimaryButton" TargetType="Button">
 <Setter Property="Background" Value="#2962FF"/>
 <Setter Property="Foreground" Value="White"/>
 <Setter Property="Padding" Value="12,6"/>
 <Setter Property="FontWeight" Value="SemiBold"/>
 <Setter Property="BorderThickness" Value="0"/>
 <Setter Property="Cursor" Value="Hand"/>
 <Setter Property="Margin" Value="0,8,0,0"/>
 <Setter Property="Template">
 <Setter.Value>
 <ControlTemplate TargetType="Button">
 <Border Background="{TemplateBinding Background}" CornerRadius="4">
 <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
 </Border>
 </ControlTemplate>
 </Setter.Value>
 </Setter>
 <Style.Triggers>
 <Trigger Property="IsMouseOver" Value="True">
 <Setter Property="Background" Value="#0039CB"/>
 </Trigger>
 <Trigger Property="IsPressed" Value="True">
 <Setter Property="Background" Value="#00227B"/>
 </Trigger>
 </Style.Triggers>
 </Style>
 <!-- Tarjeta reutilizable -->
 <Style x:Key="ServiceCard" TargetType="Border">
 <Setter Property="Background" Value="#232323"/>
 <Setter Property="CornerRadius" Value="10"/>
 <Setter Property="Padding" Value="16"/>
 <Setter Property="Margin" Value="0,0,18,18"/>
 <Setter Property="Width" Value="260"/>
 <Setter Property="Effect">
 <Setter.Value>
 <DropShadowEffect Color="#000" BlurRadius="12" ShadowDepth="2" Opacity="0.42"/>
 </Setter.Value>
 </Setter>
 </Style>
 <!-- Estrella rating -->
 <Style x:Key="StarText" TargetType="TextBlock">
 <Setter Property="FontSize" Value="15"/>
 <Setter Property="Foreground" Value="#FFC107"/>
 <Setter Property="FontFamily" Value="Segoe UI"/>
 <Setter Property="Margin" Value="0,0,4,0"/>
 </Style>
 <!-- Título sección -->
 <Style x:Key="SectionTitle" TargetType="TextBlock">
 <Setter Property="FontSize" Value="22"/>
 <Setter Property="Foreground" Value="White"/>
 <Setter Property="FontWeight" Value="SemiBold"/>
 <Setter Property="Margin" Value="0,0,0,14"/>
 </Style>
 </Window.Resources>
 <Grid Margin="0">
 <Grid.ColumnDefinitions>
 <ColumnDefinition Width="220"/>
 <ColumnDefinition Width="*"/>
 <ColumnDefinition Width="300"/>
 </Grid.ColumnDefinitions>
 <Grid.RowDefinitions>
 <RowDefinition Height="58"/>
 <RowDefinition Height="*"/>
 </Grid.RowDefinitions>
 <!-- Cabecera -->
 <Border Grid.Row="0" Grid.ColumnSpan="3" Background="#202020" Padding="16,10" BorderBrush="#333" BorderThickness="0,0,0,1">
 <DockPanel>
 <TextBlock Text="Portal de Servicios de Ciberseguridad" FontSize="20" FontWeight="Bold" Foreground="White"/>
 <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
 <Button Content="Salir" Margin="10,0,0,0" Background="#E53935" Foreground="White" Padding="14,6" BorderThickness="0" Click="Salir_Click"/>
 </StackPanel>
 </DockPanel>
 </Border>
 <!-- Menú lateral -->
 <StackPanel Grid.Row="1" Grid.Column="0" Background="#181818">
 <TextBlock Text="Menú" FontSize="16" FontWeight="Bold" Foreground="White" Margin="14,16,14,8"/>
 <Button Content="Servicios" Background="#424242" Foreground="White" Padding="12,6" Margin="14,0,14,8" BorderThickness="0" Click="Servicios_Click"/>
 <Button Content="Clientes" Background="#424242" Foreground="White" Padding="12,6" Margin="14,0,14,8" BorderThickness="0" Click="Clientes_Click"/>
 <Button Content="Nosotros" Background="#424242" Foreground="White" Padding="12,6" Margin="14,0,14,8" BorderThickness="0" Click="Nosotros_Click"/>
 </StackPanel>
 <!-- Panel Servicios -->
 <Border x:Name="ServicesPanel" Grid.Row="1" Grid.Column="1" Margin="16" Background="#1F1F1F" CornerRadius="10" Padding="22">
 <ScrollViewer VerticalScrollBarVisibility="Auto">
 <StackPanel>
 <TextBlock Text="Servicios Destacados" Style="{StaticResource SectionTitle}"/>
 <WrapPanel>
 <!-- Servicio1 -->
 <Border Style="{StaticResource ServiceCard}">
 <StackPanel>
 <TextBlock Text="Consultoría y Auditoría" FontSize="16" FontWeight="Bold" Foreground="#FAFAFA"/>
 <TextBlock Text="Evaluación de vulnerabilidades, auditorías y plan de mejora personalizado." TextWrapping="Wrap" Foreground="#CCCCCC" Margin="0,6,0,8"/>
 <TextBlock Text="Desde $1,500" Foreground="#4CAF50" FontWeight="Bold"/>
 <Button Content="Contratar" Style="{StaticResource PrimaryButton}" Tag="Consultoria" Click="ServiceContract_Click"/>
 </StackPanel>
 </Border>
 <!-- Servicio2 -->
 <Border Style="{StaticResource ServiceCard}">
 <StackPanel>
 <TextBlock Text="Capacitaciones Técnicas" FontSize="16" FontWeight="Bold" Foreground="#FAFAFA"/>
 <TextBlock Text="Cursos prácticos: hardening, respuesta a incidentes, forense y malware." TextWrapping="Wrap" Foreground="#CCCCCC" Margin="0,6,0,8"/>
 <TextBlock Text="Desde $900" Foreground="#4CAF50" FontWeight="Bold"/>
 <Button Content="Contratar" Style="{StaticResource PrimaryButton}" Tag="Capacitaciones" Click="ServiceContract_Click"/>
 </StackPanel>
 </Border>
 <!-- Servicio3 -->
 <Border Style="{StaticResource ServiceCard}">
 <StackPanel>
 <TextBlock Text="Herramientas / Suites" FontSize="16" FontWeight="Bold" Foreground="#FAFAFA"/>
 <TextBlock Text="Implementación de SIEM, EDR y escáneres de vulnerabilidades." TextWrapping="Wrap" Foreground="#CCCCCC" Margin="0,6,0,8"/>
 <TextBlock Text="Desde $2,300" Foreground="#4CAF50" FontWeight="Bold"/>
 <Button Content="Contratar" Style="{StaticResource PrimaryButton}" Tag="Herramientas" Click="ServiceContract_Click"/>
 </StackPanel>
 </Border>
 </WrapPanel>
 </StackPanel>
 </ScrollViewer>
 </Border>
 <!-- Panel Clientes -->
 <Border x:Name="ClientsPanel" Grid.Row="1" Grid.Column="1" Margin="16" Background="#1F1F1F" CornerRadius="10" Padding="22" Visibility="Collapsed">
 <ScrollViewer VerticalScrollBarVisibility="Auto">
 <StackPanel>
 <TextBlock Text="Nuestros Clientes" Style="{StaticResource SectionTitle}"/>
 <WrapPanel>
 <!-- Grandes Corporativos -->
 <Border Style="{StaticResource ServiceCard}"><StackPanel>
 <TextBlock Text="Cemex" FontSize="16" FontWeight="Bold" Foreground="#FAFAFA"/>
 <StackPanel Orientation="Horizontal" Margin="0,6,0,6"><TextBlock Style="{StaticResource StarText}" Text="★★★★★"/><TextBlock Text="4.9" Foreground="#BDBDBD" FontSize="14"/></StackPanel>
 <TextBlock Text="Industria: Construcción" Foreground="#888" FontSize="12"/>
 </StackPanel></Border>
 <Border Style="{StaticResource ServiceCard}"><StackPanel>
 <TextBlock Text="Grupo Bimbo" FontSize="16" FontWeight="Bold" Foreground="#FAFAFA"/>
 <StackPanel Orientation="Horizontal" Margin="0,6,0,6"><TextBlock Style="{StaticResource StarText}" Text="★★★★☆"/><TextBlock Text="4.6" Foreground="#BDBDBD" FontSize="14"/></StackPanel>
 <TextBlock Text="Industria: Alimentos" Foreground="#888" FontSize="12"/>
 </StackPanel></Border>
 <Border Style="{StaticResource ServiceCard}"><StackPanel>
 <TextBlock Text="Telcel" FontSize="16" FontWeight="Bold" Foreground="#FAFAFA"/>
 <StackPanel Orientation="Horizontal" Margin="0,6,0,6"><TextBlock Style="{StaticResource StarText}" Text="★★★★☆"/><TextBlock Text="4.7" Foreground="#BDBDBD" FontSize="14"/></StackPanel>
 <TextBlock Text="Industria: Telecom" Foreground="#888" FontSize="12"/>
 </StackPanel></Border>
 <Border Style="{StaticResource ServiceCard}"><StackPanel>
 <TextBlock Text="Lenovo" FontSize="16" FontWeight="Bold" Foreground="#FAFAFA"/>
 <StackPanel Orientation="Horizontal" Margin="0,6,0,6"><TextBlock Style="{StaticResource StarText}" Text="★★★★★"/><TextBlock Text="5.0" Foreground="#BDBDBD" FontSize="14"/></StackPanel>
 <TextBlock Text="Industria: Tecnología" Foreground="#888" FontSize="12"/>
 </StackPanel></Border>
 <Border Style="{StaticResource ServiceCard}"><StackPanel>
 <TextBlock Text="Accenture" FontSize="16" FontWeight="Bold" Foreground="#FAFAFA"/>
 <StackPanel Orientation="Horizontal" Margin="0,6,0,6"><TextBlock Style="{StaticResource StarText}" Text="★★★★★"/><TextBlock Text="4.8" Foreground="#BDBDBD" FontSize="14"/></StackPanel>
 <TextBlock Text="Industria: Consultoría" Foreground="#888" FontSize="12"/>
 </StackPanel></Border>
 <Border Style="{StaticResource ServiceCard}"><StackPanel>
 <TextBlock Text="Neoris" FontSize="16" FontWeight="Bold" Foreground="#FAFAFA"/>
 <StackPanel Orientation="Horizontal" Margin="0,6,0,6"><TextBlock Style="{StaticResource StarText}" Text="★★★★☆"/><TextBlock Text="4.5" Foreground="#BDBDBD" FontSize="14"/></StackPanel>
 <TextBlock Text="Industria: IT Services" Foreground="#888" FontSize="12"/>
 </StackPanel></Border>
 <!-- Empresas medianas / startups -->
 <Border Style="{StaticResource ServiceCard}"><StackPanel>
 <TextBlock Text="Fintech MX" FontSize="16" FontWeight="Bold" Foreground="#FAFAFA"/>
 <StackPanel Orientation="Horizontal" Margin="0,6,0,6"><TextBlock Style="{StaticResource StarText}" Text="★★★★☆"/><TextBlock Text="4.4" Foreground="#BDBDBD" FontSize="14"/></StackPanel>
 <TextBlock Text="Sector: Finanzas" Foreground="#888" FontSize="12"/>
 </StackPanel></Border>
 <Border Style="{StaticResource ServiceCard}"><StackPanel>
 <TextBlock Text="HealthTech" FontSize="16" FontWeight="Bold" Foreground="#FAFAFA"/>
 <StackPanel Orientation="Horizontal" Margin="0,6,0,6"><TextBlock Style="{StaticResource StarText}" Text="★★★★☆"/><TextBlock Text="4.3" Foreground="#BDBDBD" FontSize="14"/></StackPanel>
 <TextBlock Text="Sector: Salud" Foreground="#888" FontSize="12"/>
 </StackPanel></Border>
 <Border Style="{StaticResource ServiceCard}"><StackPanel>
 <TextBlock Text="LogiPyme" FontSize="16" FontWeight="Bold" Foreground="#FAFAFA"/>
 <StackPanel Orientation="Horizontal" Margin="0,6,0,6"><TextBlock Style="{StaticResource StarText}" Text="★★★☆☆"/><TextBlock Text="3.9" Foreground="#BDBDBD" FontSize="14"/></StackPanel>
 <TextBlock Text="Sector: Logística" Foreground="#888" FontSize="12"/>
 </StackPanel></Border>
 <Border Style="{StaticResource ServiceCard}"><StackPanel>
 <TextBlock Text="AgroData" FontSize="16" FontWeight="Bold" Foreground="#FAFAFA"/>
 <StackPanel Orientation="Horizontal" Margin="0,6,0,6"><TextBlock Style="{StaticResource StarText}" Text="★★★★☆"/><TextBlock Text="4.2" Foreground="#BDBDBD" FontSize="14"/></StackPanel>
 <TextBlock Text="Sector: Agro" Foreground="#888" FontSize="12"/>
 </StackPanel></Border>
 </WrapPanel>
 </StackPanel>
 </ScrollViewer>
 </Border>
 <!-- Panel Nosotros (About) -->
 <Border x:Name="AboutPanel" Grid.Row="1" Grid.Column="1" Margin="16" Background="#1F1F1F" CornerRadius="10" Padding="22" Visibility="Collapsed">
 <ScrollViewer VerticalScrollBarVisibility="Auto">
 <StackPanel>
 <TextBlock Text="Sobre Nosotros" Style="{StaticResource SectionTitle}"/>
 <TextBlock Text="Somos NexusSecure Consulting, firma mexicana enfocada en ciberseguridad estrategica, proteccion de infraestructura critica y evolucion de la madurez tecnologica." TextWrapping="Wrap" Foreground="#CCCCCC" Margin="0,0,0,12"/>
 <TextBlock Text="Mision" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,8,0,6"/>
 <TextBlock Text="Proteger activos digitales y continuidad operativa mediante acciones proactivas basadas en riesgo y alineadas a objetivos del negocio." TextWrapping="Wrap" Foreground="#BDBDBD" Margin="0,0,0,12"/>
 <TextBlock Text="Enfoque" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,8,0,6"/>
 <TextBlock Text="Framework integral: NIST CSF, MITRE ATT&amp;CK, Zero Trust y CIS Controls. Combinamos evaluacion, automatizacion y respuesta avanzada." TextWrapping="Wrap" Foreground="#BDBDBD" Margin="0,0,0,12"/>
 <TextBlock Text="Capacidades Clave" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,8,0,6"/>
 <TextBlock Text="• Auditoria y compliance • Threat Hunting • Implementacion SIEM/EDR/SOAR • DevSecOps • Deteccion y respuesta a incidentes • Formacion tecnica" TextWrapping="Wrap" Foreground="#BDBDBD" Margin="0,0,0,12"/>
 <TextBlock Text="Equipo Certificado" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,8,0,6"/>
 <TextBlock Text="CISSP, OSCP, CEH, ISO27001 Lead Auditor, Azure/AWS Security, GIAC Forensics &amp; Incident Response." TextWrapping="Wrap" Foreground="#BDBDBD" Margin="0,0,0,12"/>
 <TextBlock Text="Valores" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,8,0,6"/>
 <TextBlock Text="Integridad, transparencia, confidencialidad, mejora continua y foco en la resiliencia del cliente." TextWrapping="Wrap" Foreground="#BDBDBD" Margin="0,0,0,12"/>
 <TextBlock Text="Vision" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,8,0,6"/>
 <TextBlock Text="Ser referente latinoamericano en servicios gestionados y consultoria de ciberseguridad basados en inteligencia accionable." TextWrapping="Wrap" Foreground="#BDBDBD" Margin="0,0,0,12"/>
 </StackPanel>
 </ScrollViewer>
 </Border>
 <!-- Panel derecho estático -->
 <Border Grid.Row="1" Grid.Column="2" Background="#181818" Padding="18" BorderBrush="#333" BorderThickness="1" CornerRadius="10" Margin="16" VerticalAlignment="Stretch">
 <StackPanel>
 <TextBlock Text="Notas / Requerimientos" FontSize="16" FontWeight="Bold" Foreground="White"/>
 <TextBlock Text="Anota detalles del cliente antes de enviar una propuesta." Foreground="#BDBDBD" Margin="0,8,0,12" TextWrapping="Wrap"/>
 <TextBox Height="160" TextWrapping="Wrap" AcceptsReturn="True" Background="#252525" Foreground="White" BorderBrush="#444"/>
 <Separator Margin="0,18,0,12" Background="#333" Height="1"/>
 <TextBlock Text="Indicadores" FontSize="15" FontWeight="SemiBold" Foreground="White"/>
 <WrapPanel Margin="0,8,0,0">
 <Border Background="#2E7D32" CornerRadius="6" Padding="10" Margin="0,0,10,10" Width="120" Height="70">
 <StackPanel>
 <TextBlock Text="Clientes" Foreground="White" FontWeight="Bold"/>
 <TextBlock Text="42" Foreground="White" FontSize="16"/>
 </StackPanel>
 </Border>
 <Border Background="#0277BD" CornerRadius="6" Padding="10" Margin="0,0,10,10" Width="120" Height="70">
 <StackPanel>
 <TextBlock Text="Proyectos" Foreground="White" FontWeight="Bold"/>
 <TextBlock Text="15" Foreground="White" FontSize="16"/>
 </StackPanel>
 </Border>
 </WrapPanel>
 </StackPanel>
 </Border>
 </Grid>
</Window>